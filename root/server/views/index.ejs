<!DOCTYPE html>
<html>
    <%- include('header'); -%>
    <body>
        <div class="center">
            <h1>hola</h1>
            <form id="loginForm" action="#" method="POST">
                <div class="txt_field">
                    <input type="text" name="username" id="username" required>
                    <label>Username</label>
                </div>
                <div class="txt_field">
                    <input type="text" required>
                    <label>email</label>
                </div>
                <div class="txt_field">
                    <input type="text" name="password" id="password" required>
                    <label>Password</label>
                </div>
                <input type="submit" id="login" value="signup">
            </form>
        </div>

        <script type="text/javascript">
            var user=$('#username').val(), pass=$('#password').val(), email=$('#email').val();
            $('login').bind('click', function() {
              $.ajax('/user/signup', {
                type: 'POST',
                contentType: 'text/json',
                data: JSON.stringify({username:user, password:pass, email:email}),
                complete: function() { /* Do something with the response. */ }
              });
              return false; // Prevent form submit.
            });
          </script>
    </body>
    <%- include('footer'); -%>
</html>